---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
const { siteTitle, siteDescription } = Astro.props;
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
  <head>
    <BaseHead title={siteTitle} description={siteDescription} />
  </head>

  <body
    class="dark:bg-zinc-900 dark:text-zinc-200 bg-no-repeat bg-zinc-200 text-zinc-900"
  >
    <section
      class="min-h-screen flex flex-col justify-between h-full pt-10 md:pt-20"
    >
      <main
        class="prose max-w-[95%] sm:max-w-[65ch] px-10 dark:prose-invert lg:prose-xl mx-auto prose-always-dark"
      >
        <slot />
      </main>
      <Footer />
    </section>
  </body>
</html>
